<Window x:Class="TraceViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraceViewer"
        mc:Ignorable="d"
        Title="MainWindow" 
        Background="#101010"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"  
        Height="{x:Static SystemParameters.PrimaryScreenHeight}"
        >
    <Window.Resources>
        <Style x:Key="titles" TargetType="Label">
            <Setter Property="DockPanel.Dock" Value="Left"/>
            <Setter Property="BorderBrush" Value="Orange"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <DockPanel Margin="0,104,0,0" LastChildFill="False" Height="41" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" MinWidth="30"/>
                    <ColumnDefinition Width="200" MinWidth="30"/>
                    <ColumnDefinition Width="200" MinWidth="30"/>
                    <ColumnDefinition Width="200" MinWidth="30"/>
                    <ColumnDefinition Width="300" MinWidth="30"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Style="{StaticResource titles}" Content="#" Grid.Column="0" />
                <GridSplitter Grid.Column="0" Width="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Transparent" />

                <Label Style="{StaticResource titles}" Content="ADDRESS" Grid.Column="1" />
                <GridSplitter Grid.Column="1" Width="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Transparent" />

                <Label Style="{StaticResource titles}" Content="DISASM" Grid.Column="2" />
                <GridSplitter Grid.Column="2" Width="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Transparent" />

                <Label Style="{StaticResource titles}" Content="CHANGES" Grid.Column="3" />
                <GridSplitter Grid.Column="3" Width="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Transparent" />

                <Label Style="{StaticResource titles}" Content="COMMENTS" Grid.Column="4" />
                <GridSplitter Grid.Column="4" Width="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Transparent" />
                
            </Grid>
        </DockPanel>
        <DockPanel Margin="0,150,0,0" LastChildFill="True">
            <Grid DockPanel.Dock="Left" MinWidth="950">
                <ItemsControl x:Name="instructions_view" VirtualizingStackPanel.IsVirtualizing="True"
                  ScrollViewer.CanContentScroll="True">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.Template>
                        <ControlTemplate TargetType="ItemsControl">
                            <ScrollViewer CanContentScroll="True">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </ControlTemplate>
                    </ItemsControl.Template>
                </ItemsControl>
            </Grid>
            <StackPanel>
                
            </StackPanel>
        </DockPanel>
    </Grid>
    
</Window>
