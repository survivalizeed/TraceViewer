<UserControl x:Class="TraceViewer.WPF_RegisterRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TraceViewer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,2,0,0" >
        <DockPanel LastChildFill="False">
            <TextBlock x:Name="register" Width="60" Foreground="Coral" Style="{StaticResource disasm_text_block}" Padding="0,1,0,1"/>
            <TextBlock x:Name="value" Width="Auto" Foreground="DarkGoldenrod" Style="{StaticResource disasm_text_block}" Padding="0,1,0,1" MouseDown="value_MouseDown"/>
        </DockPanel>
    </Grid>
</UserControl>